<body>

    <h1>V2L & No Separator</h1>

    <textarea id="inputList" placeholder="Enter items separated by commas (e.g., v2l1, no1, v2l2)"></textarea>
    <button onclick="separateItems()">Separate</button>

    <div class="container">
        <div class="column">
            <h2>V2L</h2>
            <ul id="v2lList"></ul>
        </div>
        <div class="column">
            <h2>No</h2>
            <ul id="noList"></ul>
        </div>
    </div>

    <script>
        // Example pre-filled items
        const exampleItems = ["v2l1", "no1", "v2l2", "no2", "v2l3"];
        document.getElementById("inputList").value = exampleItems.join(", ");

        function separateItems() {
            const input = document.getElementById("inputList").value;
            const items = input.split(",").map(item => item.trim());
            
            const v2l = items.filter(item => item.toLowerCase().startsWith("v2l"));
            const no = items.filter(item => item.toLowerCase().startsWith("no"));

            const v2lList = document.getElementById("v2lList");
            const noList = document.getElementById("noList");

            v2lList.innerHTML = "";
            noList.innerHTML = "";

            v2l.forEach(item => {
                const li = document.createElement("li");
                li.textContent = item;
                v2lList.appendChild(li);
            });

            no.forEach(item => {
                const li = document.createElement("li");
                li.textContent = item;
                noList.appendChild(li);
            });
        }

        // Automatically separate on page load
        separateItems();
    </script>

</body>
